<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chatbot Demo</title>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            display: flex;
            height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #1e1e2f;
            color: #fff;
        }

        /* SIDEBAR */
        .sidebar {
            width: 240px;
            background: linear-gradient(180deg, #111827, #020617);
            padding: 20px;
            display: flex;
            flex-direction: column;
            box-shadow: 4px 0 12px rgba(0,0,0,.4);
        }

        .sidebar h2 {
            margin-bottom: 20px;
            color: #22c55e;
            text-align: center;
        }

        .sidebar p {
            font-size: 14px;
            color: #9ca3af;
            line-height: 1.5;
            text-align: center;
        }

        /* CHAT */
        .chat {
            flex: 1;
            display: flex;
            flex-direction: column;
            background: #0f172a;
        }

        .messages {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .msg {
            max-width: 70%;
            padding: 14px 18px;
            border-radius: 16px;
            font-size: 15px;
            line-height: 1.5;
            box-shadow: 0 2px 6px rgba(0,0,0,.4);
        }

        .user {
            align-self: flex-end;
            background: #2563eb;
            border-bottom-right-radius: 0;
        }

        .bot {
            align-self: flex-start;
            background: #334155;
            border-bottom-left-radius: 0;
        }

        /* INPUT */
        .input-area {
            display: flex;
            padding: 15px;
            background: #020617;
            border-top: 1px solid #334155;
        }

        .input-area input {
            flex: 1;
            padding: 12px 16px;
            border-radius: 20px;
            border: none;
            outline: none;
            background: #1f2937;
            color: #fff;
            font-size: 15px;
        }

        .input-area button {
            margin-left: 12px;
            padding: 12px 22px;
            border-radius: 20px;
            border: none;
            cursor: pointer;
            font-weight: bold;
            background: #22c55e;
            color: #000;
        }

        /* LOGIN POPUP */
        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,.75);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 999;
        }

        .popup {
            background: #1f2937;
            padding: 30px;
            width: 360px;
            border-radius: 16px;
            text-align: center;
            box-shadow: 0 10px 40px rgba(0,0,0,.7);
        }

        .popup h3 {
            margin-bottom: 12px;
            color: #22c55e;
        }

        .popup p {
            font-size: 14px;
            color: #cbd5e1;
            margin-bottom: 20px;
        }

        .popup a {
            display: block;
            margin-top: 10px;
            padding: 12px;
            border-radius: 10px;
            text-decoration: none;
            font-weight: bold;
        }

        .login-btn {
            background: #2563eb;
            color: #fff;
        }

        .signup-btn {
            background: #22c55e;
            color: #000;
        }
    </style>
</head>
<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h2>CodeBot</h2>
        <p>Demo Mode<br>Login required for full access</p>
    </div>

    <!-- CHAT -->
    <div class="chat">
        <div id="messages" class="messages"></div>

        <div class="input-area">
            <input id="msg" placeholder="Ask something..." onkeydown="if(event.key==='Enter') sendMessage()">
            <button onclick="sendMessage()">Send</button>
        </div>
    </div>

    <!-- LOGIN POPUP -->
    <div id="overlay" class="overlay">
        <div class="popup">
            <h3>Login Required</h3>
            <p>Demo time is over.<br>Please login to continue.</p>
            <a href="/login" class="login-btn">Login</a>
            <a href="/signup" class="signup-btn">Create Account</a>
        </div>
    </div>

    <script>
        const messages = document.getElementById("messages");
        const input = document.getElementById("msg");

        const demoReplies = [
            "Thinking ðŸ¤–",
            "Answering ðŸš€",
            ".... ðŸ˜‰",
            "Wait for Response."
        ];

        function addMsg(text, cls) {
            const div = document.createElement("div");
            div.className = `msg ${cls}`;
            div.innerText = text;
            messages.appendChild(div);
            messages.scrollTop = messages.scrollHeight;
        }

        function sendMessage() {
            const text = input.value.trim();
            if (!text) return;

            addMsg(text, "user");
            input.value = "";

            setTimeout(() => {
                const reply = demoReplies[Math.floor(Math.random() * demoReplies.length)];
                addMsg(reply, "bot");
            }, 600);
        }

        /* DEMO TIMER */
        setTimeout(() => {
            document.getElementById("overlay").style.display = "flex";
            input.disabled = true;
        }, 4000); // 4 sec
    </script>

</body>
</html>
